<h3>What people say about Dancer...</h3>

<% FOREACH testimonial = testimonials %>
    <p>
    <cite><% testimonial.text %></cite> -
    <% IF testimonial.source_url %>
        <a href="<% testimonial.source_url %>"><% testimonial.source %></a>
    <% ELSE %>
        <% testimonial.source %>
    <% END %>
    </p>
<% END %>

