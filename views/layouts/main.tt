<a href="http://github.com/sukria/Dancer"><img style="position: absolute; top: 0; right: 0; border: 0;" src="http://s3.amazonaws.com/github/ribbons/forkme_right_darkblue_121621.png" alt="Fork me on GitHub" /></a>


<script type="text/javascript">
$.getJSON("http://twitter.com/statuses/user_timeline.json?screen_name=perldancer&count=1&callback=?",
		function(data){
		$.each(data, function(i,item){
			ct = item.text;
			ct = ct.replace(/http:\/\/\S+/g,  '<a href="$&" >$&</a>');
			ct = ct.replace(/\s(@)(\w+)/g,    ' @<a href="http://twitter.com/$2" >$2</a>');
			ct = ct.replace(/\s(#)(\w+)/g,    ' #<a href="http://search.twitter.com/search?q=%23$2" >$2</a>');
			$("#jstweets").append(' <span>'+ct +'</span> ');
			});
		});

$.getJSON("http://github.com/api/v2/json/repos/show/sukria/dancer/contributors?callback=?",
    function(data){
        $.each(data.contributors, function(i,user){
            if (user.gravatar_id && user.name) {
                var image = '<img src="http://gravatar.com/avatar/' + user.gravatar_id + '.jpg?s=48&d=identicon" alt="' + user.name + '" title="' + user.name + '" class="github_gravatar">';
                $("#github_contributors").append(image);
            }
        });
    });

</script>

